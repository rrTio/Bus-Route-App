<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baseGrey">

    <TextView tools:ignore="MissingConstraints"
            android:id="@+id/lbl_MainMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/feugreen"
            android:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <Button tools:ignore="MissingConstraints"
            android:id="@+id/btnScanQR"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="@string/btnScan"
            android:textColor="@color/feugold"
            android:background="@drawable/bg_btn"
            android:textSize="20dp"

            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_MainMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
    />

    <Button tools:ignore="MissingConstraints"
            android:id="@+id/btnShowLogs"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="@string/btnLogs"
            android:textColor="@color/feugold"
            android:background="@drawable/bg_btn"
            android:textSize="20dp"

            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnScanQR"
            android:layout_marginTop="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>